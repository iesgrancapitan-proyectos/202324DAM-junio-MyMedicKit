<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/forma_edittext"
    android:elevation="10dp"
    android:minHeight="90dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- TextView nombre del medicamento -->
    <TextView
        android:id="@+id/nombreMedicamento"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Prueba"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEliminar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523" />

    <!-- ImageView boton de eliminar -->
    <ImageView
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/forma_boton_redondo"
        android:elevation="5dp"
        android:onClick="onDeleteClickListener"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconpapelera" />


</androidx.constraintlayout.widget.ConstraintLayout>
