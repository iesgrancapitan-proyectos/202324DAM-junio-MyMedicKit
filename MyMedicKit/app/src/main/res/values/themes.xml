<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Design.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/bluedark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo para el check de registrarse -->
    <style name="estilo_check" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/gris</item>
        <item name="colorAccent">@color/azul</item>
        <item name="colorSecondary">@color/azul</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

</resources>