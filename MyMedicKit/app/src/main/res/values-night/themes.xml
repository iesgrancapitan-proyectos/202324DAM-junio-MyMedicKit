<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FragmentActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <!-- Estilo para el check de registrarse -->
    <style name="estilo_check" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/gris</item>
        <item name="colorAccent">@color/azul</item>
        <item name="colorSecondary">@color/azul</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

</resources>